{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "typeRoots": ["node_modules/@types"],
    "types": ["element-plus/global", "node", "yl-element-ui/global"],
    "moduleResolution": "node",
  },
  "allowJs": true,
}
